generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid()) // ID пользователя
  name        String
  secondName  String
  sex         Sex      @default(MALE)
  phoneNumber String
  email       String
  avatar      String
  reviews     Review[] // Один пользователь может иметь несколько отзывов
}

model Products {
  id          String      @id @default(uuid())
  type        TypeProduct
  image       String
  description String
}

model Review {
  id          String @id @default(uuid()) // ID отзыва
  userId      String // ID пользователя (внешний ключ)
  description String // Текст отзыва
  status      Status @default(LIKE)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum TypeProduct {
  SERVICE
  MOBILEGAME
}

enum Sex {
  MALE
  FEMALE
}

enum Status {
  LIKE
  DISLIKE
}
