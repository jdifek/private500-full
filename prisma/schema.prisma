generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid()) // ID пользователя
  name           String
  secondName     String
  sex            Sex      @default(MALE)
  phoneNumber    String
  email          String   @unique
  password       String 
  avatar         String
  accessToken    String?
  refreshToken   String?
  isEmailVerified Boolean  @default(false) // Подтвержден ли email
  reviews        Review[] // Один пользователь может иметь несколько отзывов
}

model Products {
  id          String      @id @default(uuid())
  type        TypeProduct
  image       String
  description String
  Review      Review[]
}

model Review {
  id          String @id @default(uuid()) // ID отзыва
  userId      String // ID пользователя (внешний ключ)
  productId   String
  description String // Текст отзыва
  status      Status @default(LIKE)

  product Products @relation(fields: [productId], references: [id])
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum TypeProduct {
  SERVICE
  MOBILEGAME
}

enum Sex {
  MALE
  FEMALE
}

enum Status {
  LIKE
  DISLIKE
}